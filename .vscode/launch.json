{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Dataset to Cognitive",
            "type": "python",
            "request": "launch",
            "program": "dataset_to_cognitive.py",
            "cwd": "${workspaceFolder}/data/preparation/cognitive",
            "args": [
                "--dataset",
                "${input:datasetPath}",
                "--type",
                "${input:customVisionProjectType}"
            ],
            "preLaunchTask": "pipInstall cognitive",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: CVAT to Dataset",
            "type": "python",
            "request": "launch",
            "program": "cvat_to_dataset.py",
            "cwd": "${workspaceFolder}/data/preparation/tools",
            "args": [
                "--clips",
                "${input:dataFolder}/Frames",
                "--labels",
                "${input:dataFolder}/Labels",
                "--output",
                "${input:dataFolder}/Datasets",
                "--max-frames",
                "${input:maxFrames}"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "PotClassifier Container Local Debug (Python)",
            "type": "python",
            "request": "attach",
            "port": 5678,
            "host": "localhost",
            "logToFile": true,
            "redirectOutput": true,
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/modules/PotClassifier/app",
                    "remoteRoot": "/app"
                }
            ]
        },
        {
            "name": "PotClassifier Container Remote Debug (Python)",
            "type": "python",
            "request": "attach",
            "port": 5678,
            "host": "${input:remoteHost}",
            "logToFile": true,
            "redirectOutput": true,
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/modules/PotClassifier/app",
                    "remoteRoot": "/app"
                }
            ]
        },
        {
            "name": "PotClassifier Local Debug (Python)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/modules/PotClassifier/app/app.py",
            "console": "integratedTerminal",
            "env": {
                "EdgeHubConnectionString": "${config:azure-iot-edge.EdgeHubConnectionString}",
                "EdgeModuleCACertificateFile": "${config:azure-iot-edge.EdgeModuleCACertificateFile}"
            },
            "preLaunchTask": "pipInstall PotClassifier"
        },
        {
            "name": "PotDetector Container Local Debug (Python)",
            "type": "python",
            "request": "attach",
            "port": 5679,
            "host": "localhost",
            "logToFile": true,
            "redirectOutput": true,
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/modules/PotDetector/app",
                    "remoteRoot": "/app"
                }
            ]
        },
        {
            "name": "PotDetector Container Remote Debug (Python)",
            "type": "python",
            "request": "attach",
            "port": 5679,
            "host": "${input:remoteHost}",
            "logToFile": true,
            "redirectOutput": true,
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/modules/PotDetector/app",
                    "remoteRoot": "/app"
                }
            ]
        },
        {
            "name": "PotDetector Local Debug (Python)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/modules/PotDetector/app/app.py",
            "console": "integratedTerminal",
            "env": {
                "EdgeHubConnectionString": "${config:azure-iot-edge.EdgeHubConnectionString}",
                "EdgeModuleCACertificateFile": "${config:azure-iot-edge.EdgeModuleCACertificateFile}"
            }
        }
    ],
    "inputs": [
        {
            "id": "dataFolder",
            "type": "promptString",
            "description": "Folder with frames/labels/datasets files"
        },
        {
            "id": "maxFrames",
            "type": "promptString",
            "description": "Maximum number of frames per clip to sample"
        },
        {
            "id": "datasetPath",
            "type": "promptString",
            "description": ".zip file with the dataset"
        },
        {
            "id": "customVisionProjectType",
            "type": "pickString",
            "options": [
                "detection",
                "classification"
            ],
            "description": "Choose whether this should be object detection or classification"
        },
        {
            "id": "remoteHost",
            "type": "promptString",
            "description": "Enter host name or IP address of the remote host"
        }
    ]
}
