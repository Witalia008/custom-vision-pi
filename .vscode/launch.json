{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: CVAT to Dataset",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/data/preparation/tools/cvat_to_dataset.py",
      "args": [
        "--clips", "${input:dataFolder}/Frames",
        "--labels", "${input:dataFolder}/Labels",
        "--output", "${input:dataFolder}/Datasets"
      ],
      "console": "integratedTerminal"
    },
    {
      "name": "CameraCapture Remote Debug (Python)",
      "type": "python",
      "request": "attach",
      "port": 5678,
      "host": "localhost",
      "logToFile": true,
      "redirectOutput": true,
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}/modules/CameraCapture",
          "remoteRoot": "/app"
        }
      ],
      "windows": {
        "pathMappings": [
          {
            "localRoot": "${workspaceFolder}\\modules\\CameraCapture",
            "remoteRoot": "/app"
          }
        ]
      }
    }
  ],
  "inputs": [
    {
      "id": "dataFolder",
      "type": "promptString",
      "description": "Folder with frames/labels/datasets files"
    }
  ]
}